@model IEnumerable<ShoeStore.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
    ViewData["ActiveMenu"] = "category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Quản lý danh mục</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <span>Danh mục</span>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Danh sách danh mục</h4>
                        <a asp-action="Create" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Thêm mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="categoryTable" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
                                    <th style="width: 15%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(index++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a asp-action="Edit" asp-route-id="@item.CategoryId"
                                                   class="btn btn-link btn-primary btn-lg" data-toggle="tooltip"
                                                   data-original-title="Sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.CategoryId"
                                                   class="btn btn-link btn-info btn-lg" data-toggle="tooltip"
                                                   data-original-title="Chi tiết">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.CategoryId"
                                                   class="btn btn-link btn-danger btn-lg" data-toggle="tooltip"
                                                   data-original-title="Xóa"
                                                   onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoryTable').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ _MAX_ mục)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                }
            });

            // Khởi tạo tooltip
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

@section Styles {
    <style>
        .form-button-action {
            display: flex;
            gap: 5px;
        }

        .btn-link {
            padding: 5px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            width: 35px;
            height: 35px;
        }

            .btn-link i {
                font-size: 16px;
                color: white;
            }

        .table td, .table th {
            vertical-align: middle;
        }
    </style>
}
