@model IEnumerable<ShoeStore.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    ViewData["ActiveMenu"] = "product";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Quản lý sản phẩm</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Danh sách sản phẩm</h4>
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Thêm sản phẩm
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="productTable" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Mã SP</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Ảnh</th>
                                    <th>Danh mục</th>
                                    <th>Thương hiệu</th>
                                    <th>Giá</th>
                                    <th>Tồn kho/Đã bán</th>
                                    <th>Trạng thái</th>
                                    <th>Người tạo/chỉnh sửa</th>
                                    <th style="width: 10%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductId</td>
                                        <td>@item.ProductCode</td>
                                        <td>
                                            @item.Name
                                            @if (item.IsNew)
                                            {
                                                <span class="badge badge-success">New</span>
                                            }
                                            @if (item.IsHot)
                                            {
                                                <span class="badge badge-warning">Hot</span>
                                            }
                                            @if (item.DiscountPrice > 0)
                                            {
                                                var discountPercent = Math.Round((1 - (decimal)item.DiscountPrice / item.Price) * 100);
                                                <span class="badge badge-danger">-@discountPercent%</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImagePath))
                                            {
                                                <img src="@item.ImagePath" alt="@item.Name" style="max-width: 50px;" />
                                            }
                                        </td>
                                        <td>@item.Categories?.Name</td>
                                        <td>@item.Brands?.Name</td>
                                        <td>
                                            @if (item.DiscountPrice > 0)
                                            {
                                                var finalPrice = item.Price - item.DiscountPrice;
                                                <del class="text-muted">@item.Price.ToString("#,##0")đ</del>
                                                <br />
                                                <span class="text-danger">@finalPrice.ToString("#,##0")đ</span>
                                            }
                                            else
                                            {
                                                @item.Price.ToString("#,##0")
                                                <span>đ</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var totalStock = item.ProductSizeStocks?.Sum(s => s.StockQuantity) ?? 0;
                                                var totalSold = item.OrderDetails?.Sum(od => od.Quantity) ?? 0;
                                            }
                                            @if (totalStock == 0)
                                            {
                                                <span class="badge badge-danger">Sold Out</span>
                                            }
                                            else
                                            {
                                                <span>@totalSold/@totalStock</span>
                                            }
                                        </td>
                                        <td>
                                            @if (totalStock == 0)
                                            {
                                                <span class="badge badge-danger">Sold Out</span>
                                            }
                                            else if (item.Status == ProductStatus.Available)
                                            {
                                                <span class="badge badge-success">Đang bán</span>
                                            }
                                            else if (item.Status == ProductStatus.OutOfStock)
                                            {
                                                <span class="badge badge-warning">Hết hàng</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Ngừng kinh doanh</span>
                                            }
                                        </td>
                                        <td>
                                            <div id="product-@item.ProductId">
                                                <small class="text-muted">Tạo bởi:</small> <span class="created-by">@(string.IsNullOrEmpty(item.CreatedBy) ? "N/A" : item.CreatedBy)</span><br/>
                                                <small class="text-muted">Ngày tạo:</small> <span class="created-date">@(item.CreatedDate.ToString("dd/MM/yyyy HH:mm"))</span><br/>
                                                <small class="text-muted">Cập nhật bởi:</small> <span class="updated-by">@(string.IsNullOrEmpty(item.UpdatedBy) ? "N/A" : item.UpdatedBy)</span><br/>
                                                <small class="text-muted">Ngày cập nhật:</small> <span class="updated-date">@(item.UpdatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-button-action">
                                                <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-link btn-primary btn-lg" title="Chỉnh sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("ManageImages", new { id = item.ProductId })" class="btn btn-link btn-info btn-lg" title="Quản lý ảnh">
                                                    <i class="fa fa-images"></i>
                                                </a>
                                                <a href="@Url.Action("History", new { id = item.ProductId })" class="btn btn-link btn-warning btn-lg" title="Lịch sử thay đổi">
                                                    <i class="fa fa-history"></i>
                                                </a>
                                                <button type="button" class="btn btn-link btn-danger" onclick="deleteProduct(@item.ProductId)" title="Xóa">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#productTable').DataTable({
                "pageLength": 10,
                "order": [[0, "desc"]]
            });
        });

        function deleteProduct(id) {
            if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: { id: id },
                    success: function(result) {
                        location.reload();
                    },
                    error: function() {
                        alert('Có lỗi xảy ra');
                    }
                });
            }
        }

        function showHistory(id) {
            // Hiển thị modal chứa lịch sử thay đổi
            var content = `
                <div class="history-info">
                    <p><strong>Tạo bởi:</strong> ${$('#product-' + id + ' .created-by').text()}</p>
                    <p><strong>Ngày tạo:</strong> ${$('#product-' + id + ' .created-date').text()}</p>
                    <p><strong>Cập nhật bởi:</strong> ${$('#product-' + id + ' .updated-by').text()}</p>
                    <p><strong>Ngày cập nhật:</strong> ${$('#product-' + id + ' .updated-date').text()}</p>
                </div>
            `;

            Swal.fire({
                title: 'Lịch sử thay đổi',
                html: content,
                icon: 'info',
                confirmButtonText: 'Đóng'
            });
        }
    </script>
}
