@model IEnumerable<ShoeStore.Models.Footer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FooterAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FooterPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FooterEmail)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FooterAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FooterPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FooterEmail)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.FooterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FooterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FooterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
