@model ShoeStore.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <h1 class="text-center text-violet">Delete Contact</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this contact?</h3>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card bg-light">
                <div class="card-header bg-danger text-white">
                    <h4>Contact Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Contact Map</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactMap)</dd>

                        <dt class="col-sm-3">Contact Phone</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactPhone)</dd>

                        <dt class="col-sm-3">Contact Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactEmail)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.ContactDescription)</dd>

                        <dt class="col-sm-3">Updated Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedDate)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ContactName" />
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
