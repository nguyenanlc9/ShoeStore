@model IEnumerable<ShoeStore.Models.Contact>

@{
    ViewData["Title"] = "Quản lý liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Quản lý liên hệ</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <span>Liên hệ</span>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title">
                            <i class="fas fa-tags mr-2"></i> Thông Tin Liên Hệ
                        </h4>
                    </div>
                    </div>
                    <div class="table-responsive">
                        <table id="contactTable" class="table table-striped table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Map</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>UpdatedDate</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                                        <td>@Html.Raw(item.ContactMap)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ContactPhone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a asp-action="Edit" asp-route-id="@item.ContactName"
                                                   class="btn btn-link btn-primary btn-sm" data-toggle="tooltip" title="Sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.ContactName"
                                                   class="btn btn-link btn-info btn-sm" data-toggle="tooltip" title="Chi tiết">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .form-button-action a {
            font-size: 1.2rem;
            padding: 8px 12px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .form-button-action a i {
                font-size: 1.3rem;
                transition: transform 0.3s ease;
            }

            .form-button-action a:hover {
                background-color: #f0f0f0;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            }

                .form-button-action a:hover i {
                    transform: scale(1.1);
                }
    </style>
}
