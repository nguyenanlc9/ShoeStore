@model ShoeStore.Models.Slider

@{
    ViewData["Title"] = "Xóa Slider";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Xác nhận xóa Slider</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            Bạn có chắc chắn muốn xóa Slider này?
        </div>

        <dl class="row">
            <dt class="col-sm-2">Tên Slider</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Tiêu đề</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Mô tả</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Hình ảnh</dt>
            <dd class="col-sm-10">
                <img src="~/images/sliders/@Model.Img" class="img-thumbnail" style="max-width: 200px" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Slider_ID" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
