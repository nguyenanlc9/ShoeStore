@model ShoeStore.Models.PaymentMethodConfig
@{
    ViewData["Title"] = "Thêm phương thức thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thêm phương thức thanh toán</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Type" class="control-label">Loại</label>
                    <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethodType>()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng thái</label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethodStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaintenanceMessage" class="control-label">Thông báo bảo trì</label>
                    <textarea asp-for="MaintenanceMessage" class="form-control"></textarea>
                    <span asp-validation-for="MaintenanceMessage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 