        // Khởi tạo kết nối SignalR
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        var notificationCount = 0;
        
        function updateNotificationCount() {
            $('.notif-count').text(notificationCount);
        }

        function addNotification(icon, title, message, time, url) {
            var notification = `
                <a href="${url}" class="dropdown-item">
                    <i class="${icon}"></i> ${title}
                    <p class="text-sm">${message}</p>
                    <span class="float-right text-muted text-sm">${time}</span>
                </a>
                <div class="dropdown-divider"></div>
            `;
            
            $('#notificationList').prepend(notification);
            notificationCount++;
            updateNotificationCount();
            
            // Phát âm thanh
            playNotificationSound();
        }

        // Xử lý sự kiện nhận đơn hàng mới
        connection.on("ReceiveNewOrder", function (order) {
            addNotification(
                'fas fa-shopping-cart text-success',
                'Đơn hàng mới!',
                `Mã đơn: ${order.orderCode}<br>Khách hàng: ${order.customerName}<br>Tổng tiền: ${order.total.toLocaleString('vi-VN')}đ`,
                'Vừa xong',
                `/Admin/Order/Details/${order.orderId}`
            );
        });

        // Xử lý sự kiện đơn hàng bị hủy
        connection.on("ReceiveOrderCancelled", function (order) {
            addNotification(
                'fas fa-times-circle text-danger',
                'Đơn hàng đã bị hủy!',
                `Mã đơn: ${order.orderCode}<br>Khách hàng: ${order.customerName}<br>Lý do: ${order.reason}`,
                'Vừa xong',
                `/Admin/Order/Details/${order.orderId}`
            );
        });

        // Xử lý sự kiện thay đổi trạng thái đơn hàng
        connection.on("ReceiveOrderStatusChange", function (order) {
            addNotification(
                'fas fa-sync text-info',
                'Cập nhật trạng thái đơn hàng',
                `Mã đơn: ${order.orderCode}<br>Trạng thái mới: ${getStatusText(order.status)}<br>Cập nhật bởi: ${order.updatedBy}`,
                'Vừa xong',
                `/Admin/Order/Details/${order.orderId}`
            );
        });

        // Hàm chuyển đổi trạng thái sang text
        function getStatusText(status) {
            switch (status) {
                case 'Pending': return 'Chờ xử lý';
                case 'Processing': return 'Đang xử lý';
                case 'Shipping': return 'Đang giao hàng';
                case 'Completed': return 'Đã hoàn thành';
                case 'Cancelled': return 'Đã hủy';
                default: return status;
            }
        }

        // Hàm phát âm thanh thông báo
        function playNotificationSound() {
            var audio = new Audio('/sounds/notification.mp3');
            audio.play();
        }

        // Kết nối đến SignalR Hub
        connection.start()
            .then(function () {
                console.log("SignalR Connected!");
            })
            .catch(function (err) {
                console.error(err.toString());
            });
    </script>
</body>
</html>