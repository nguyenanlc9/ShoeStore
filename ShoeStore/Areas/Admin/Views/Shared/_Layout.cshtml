    <style>
        /* Notification styles */
        .notification {
            position: absolute;
            top: 0;
            right: -8px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            font-size: 12px;
            font-weight: 300;
            color: #fff;
            text-align: center;
            line-height: 18px;
        }

        .dropdown-notif {
            width: 300px;
            padding: 0;
            border: 0;
            box-shadow: 0 0 15px 1px rgba(64, 70, 74, 0.2);
        }

        .notif-box {
            background: #fff;
            border-radius: 4px;
        }

        .notif-header {
            padding: 15px;
            border-bottom: 1px solid #eee;
            font-weight: 600;
        }

        .notif-center {
            max-height: 350px;
            overflow-y: auto;
        }

        .notif-item {
            display: flex;
            padding: 15px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
            transition: all .3s;
        }

        .notif-item:hover {
            background: #f7f7f7;
        }

        .notif-item .notif-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 15px;
            color: #fff;
        }

        .notif-item .notif-content {
            flex: 1;
        }

        .notif-item .notif-content .notif-text {
            font-size: 14px;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .notif-item .notif-content .notif-time {
            font-size: 12px;
            color: #777;
        }

        .notif-footer {
            padding: 15px;
            text-align: center;
            border-top: 1px solid #eee;
        }

        .notif-footer a {
            color: #1572E8;
            text-decoration: none;
        }

        .notif-footer a:hover {
            text-decoration: underline;
        }

        /* Notification types */
        .notif-primary { background: #1572E8 !important; }
        .notif-success { background: #31CE36 !important; }
        .notif-warning { background: #FFAD46 !important; }
        .notif-danger { background: #F25961 !important; }
    </style>

    <script>
