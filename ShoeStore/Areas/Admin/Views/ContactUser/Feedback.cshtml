@model ShoeStore.Models.ContactUser

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Feedback Form</h2>
            <form asp-action="SendFeedback" method="post" class="border rounded p-4 shadow-sm bg-light">
                <div class="mb-3">
                    <label for="contactUEmail" class="form-label">Email</label>
                    <input type="email" name="contactUEmail" id="contactUEmail" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea name="message" id="message" class="form-control" rows="5" placeholder="Enter your feedback" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Feedback</button>
            </form>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>
</div>
