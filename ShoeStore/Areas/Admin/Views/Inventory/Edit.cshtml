@model ShoeStore.Models.ProductSizeStock
@{
    ViewData["Title"] = "Chỉnh sửa tồn kho";
    ViewData["ActiveMenu"] = "product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Chỉnh sửa tồn kho</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Thông tin tồn kho</div>
                </div>
                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="ProductSizeStockID" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label>Sản phẩm</label>
                            <input type="hidden" asp-for="ProductID" />
                            <input type="text" value="@Model.Product.Name" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Size</label>
                            <input type="hidden" asp-for="SizeID" />
                            <input type="text" value="@Model.Size.SizeValue" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="StockQuantity">Số lượng</label>
                            <input asp-for="StockQuantity" class="form-control" type="number" min="0" required />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-action">
                        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                        <a asp-action="Index" class="btn btn-danger">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 