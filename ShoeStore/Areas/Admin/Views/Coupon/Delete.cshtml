@model ShoeStore.Models.Coupon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <h1 class="text-center text-violet">Delete Coupon</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this coupon?</h3>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card bg-light">
                <div class="card-header bg-danger text-white">
                    <h4>Coupon Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Coupon Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponName)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.Description)</dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DateStart)</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DateEnd)</dd>

                        <dt class="col-sm-3">Quantity</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CouponId" />
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
