@model IEnumerable<ShoeStore.Models.Brand>

@{
    ViewData["Title"] = "Quản lý thương hiệu";
    ViewData["ActiveMenu"] = "brand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Quản lý thương hiệu</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <span>Thương hiệu</span>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Danh sách thương hiệu</h4>
                        <a asp-action="Create" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Thêm mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table id="brandTable" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên thương hiệu</th>
                                    <th>Người tạo</th>
                                    <th>Ngày tạo</th>
                                    <th>Người cập nhật</th>
                                    <th>Ngày cập nhật</th>
                                    <th style="width: 15%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(index++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@(item.CreatedDate.ToString("dd/MM/yyyy HH:mm"))</td>
                                        <td>@item.UpdatedBy</td>
                                        <td>@(item.UpdatedDate?.ToString("dd/MM/yyyy HH:mm"))</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a asp-action="Edit" asp-route-id="@item.BrandId"
                                                    class="btn btn-link btn-primary btn-lg" data-toggle="tooltip"
                                                    data-original-title="Sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-link btn-danger" onclick="deleteBrand(@item.BrandId)">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#brandTable').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ _MAX_ mục)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                }
            });

            // Khởi tạo tooltip
            $('[data-toggle="tooltip"]').tooltip();
        });

        function deleteBrand(id) {
            if (confirm('Bạn có chắc chắn muốn xóa thương hiệu này?')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: { id: id },
                    success: function(result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert(result.message || 'Có lỗi xảy ra');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra');
                    }
                });
            }
        }
    </script>
}

@section Styles {
    <style>
        .form-button-action {
            display: flex;
            gap: 5px;
        }

        .btn-link {
            padding: 5px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            width: 35px;
            height: 35px;
        }

            .btn-link i {
                font-size: 16px;
                color: white;
            }

        .table td, .table th {
            vertical-align: middle;
        }
    </style>
}
