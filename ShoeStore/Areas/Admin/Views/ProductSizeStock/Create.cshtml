@model ShoeStore.Models.ProductSizeStock

@{
    ViewData["Title"] = "Thêm số lượng tồn kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Thêm số lượng tồn kho</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Thông tin số lượng tồn kho</div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="ProductID" class="control-label">Sản phẩm</label>
                            <select asp-for="ProductID" class="form-control" asp-items="ViewBag.Products">
                                <option value="">-- Chọn sản phẩm --</option>
                            </select>
                            <span asp-validation-for="ProductID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SizeID" class="control-label">Kích thước</label>
                            <select asp-for="SizeID" class="form-control" asp-items="ViewBag.Sizes">
                                <option value="">-- Chọn kích thước --</option>
                            </select>
                            <span asp-validation-for="SizeID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StockQuantity" class="control-label">Số lượng tồn</label>
                            <input asp-for="StockQuantity" class="form-control" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Thêm mới" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-default">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
