@model IEnumerable<ShoeStore.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Quản lý đơn hàng</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <span>Đơn hàng</span>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title">
                        <i class="fas fa-shopping-cart mr-2"></i> Danh sách đơn hàng
                    </h4>
                    <a asp-action="Create" class="btn btn-primary btn-round">
                        <i class="fa fa-plus mr-1"></i> Thêm đơn hàng mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Tìm kiếm và lọc -->
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <!-- Tìm kiếm -->
                        <div class="form-group">
                            <input id="searchBox" type="text" class="form-control" placeholder="Tìm kiếm đơn hàng..." onkeyup="filterTable()" />
                        </div>

                        <!-- Chọn số lượng hiển thị -->
                        <div class="form-group">
                            <label for="recordsPerPage" class="mr-2">Hiển thị:</label>
                            <select id="recordsPerPage" class="form-control" onchange="changePageSize()">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>

                    <!-- Bảng hiển thị đơn hàng -->
                    <div class="table-responsive">
                        <table id="orderTable" class="table table-striped table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Mã đơn hàng</th>
                                    <th>Khuyến mãi</th>
                                    <th>Phương thức thanh toán</th>
                                    <th>Trạng thái</th>
                                    <th>Tùy Chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.OrderUsName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderCoupon)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a asp-action="Edit" asp-route-id="@item.OrderId"
                                                   class="btn btn-link btn-primary btn-sm" data-toggle="tooltip" title="Sửa">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.OrderId"
                                                   class="btn btn-link btn-info btn-sm" data-toggle="tooltip" title="Chi tiết">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.OrderId"
                                                   class="btn btn-link btn-danger btn-sm" data-toggle="tooltip" title="Xóa">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul id="pagination" class="pagination justify-content-end">
                            <!-- Pagination items sẽ được tạo bằng JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Số bản ghi hiển thị mỗi trang
        let recordsPerPage = 5;
        let currentPage = 1;

        // Lấy danh sách tất cả các hàng
        const rows = document.querySelectorAll("#couponTable tbody tr");

        // Cập nhật bảng hiển thị
        function updateTable() {
            const totalRecords = rows.length;
            const totalPages = Math.ceil(totalRecords / recordsPerPage);

            // Ẩn tất cả các hàng
            rows.forEach(row => row.style.display = "none");

            // Hiển thị các hàng thuộc trang hiện tại
            const startIndex = (currentPage - 1) * recordsPerPage;
            const endIndex = startIndex + recordsPerPage;
            for (let i = startIndex; i < endIndex && i < totalRecords; i++) {
                rows[i].style.display = "";
            }

            // Cập nhật phân trang
            updatePagination(totalPages);
        }

        // Cập nhật phân trang
        function updatePagination(totalPages) {
            const pagination = document.getElementById("pagination");
            pagination.innerHTML = "";

            for (let i = 1; i <= totalPages; i++) {
                const pageItem = document.createElement("li");
                pageItem.className = "page-item" + (i === currentPage ? " active" : "");
                pageItem.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${i})">${i}</a>`;
                pagination.appendChild(pageItem);
            }
        }

        // Điều hướng đến trang khác
        function goToPage(page) {
            currentPage = page;
            updateTable();
        }

        // Thay đổi số bản ghi hiển thị mỗi trang
        function changePageSize() {
            recordsPerPage = parseInt(document.getElementById("recordsPerPage").value);
            currentPage = 1; // Quay lại trang đầu tiên
            updateTable();
        }

        // Tìm kiếm
        function filterTable() {
            const searchQuery = document.getElementById("searchBox").value.toLowerCase();
            rows.forEach(row => {
                const cells = row.querySelectorAll("td");
                const match = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(searchQuery));
                row.style.display = match ? "" : "none";
            });
        }

        // Khởi tạo bảng hiển thị ban đầu
        document.addEventListener("DOMContentLoaded", () => {
            updateTable();
        });
    </script>
    <style>
        .form-button-action a {
            font-size: 1.2rem;
            padding: 8px 12px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .form-button-action a i {
                font-size: 1.3rem;
                transition: transform 0.3s ease;
            }

            .form-button-action a:hover {
                background-color: #f0f0f0;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            }

                .form-button-action a:hover i {
                    transform: scale(1.1);
                }
    </style>
}
