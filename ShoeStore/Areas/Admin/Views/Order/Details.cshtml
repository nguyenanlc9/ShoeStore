@model ShoeStore.Models.Order
@using ShoeStore.Models.Enums

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Chi Tiết Đơn Hàng</h1>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Thông Tin Đơn Hàng</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Thông tin đơn hàng</h5>
                    <p>Mã đơn hàng: <strong>@Model.OrderCode</strong></p>
                    <p>Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>Phương thức thanh toán: 
                        <span class="badge badge-info">@Model.PaymentMethod.ToString()</span>
                    </p>
                    <p>Trạng thái thanh toán: 
                        <span class="badge @(Model.PaymentStatus == PaymentStatus.Completed ? "badge-success" : 
                            Model.PaymentStatus == PaymentStatus.Pending ? "badge-warning" : "badge-danger")">
                            @Model.PaymentStatus.ToString()
                        </span>
                    </p>
                    @if (!string.IsNullOrEmpty(Model.OrderDescription))
                    {
                        <p>Thông tin thanh toán: @Model.OrderDescription</p>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a class="btn btn-secondary" asp-action="Index">Quay Lại Danh Sách</a>
        </div>
    </div>
</div>

<style>
    .card {
        margin-top: 20px;
    }
</style>
