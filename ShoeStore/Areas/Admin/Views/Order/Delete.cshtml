@model ShoeStore.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <h1 class="text-center text-danger">Delete Order</h1>
    <h3 class="text-center text-warning">Are you sure you want to delete this order?</h3>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card bg-light">
                <div class="card-header bg-danger text-white">
                    <h4>Order Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">User Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderUsName)</dd>

                        <dt class="col-sm-3">Order Code</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderCode)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.OrderDescription)</dd>

                        <dt class="col-sm-3">Coupon</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderCoupon)</dd>

                        <dt class="col-sm-3">Payment Method</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentMethod)</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderStatus)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="OrderId" />
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
