            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @if (ViewData["FeaturedProducts"] is List<ProductViewModel> productViewModels)
                    {
                        foreach (var productVM in productViewModels)
                        {
                            <div class="item">
