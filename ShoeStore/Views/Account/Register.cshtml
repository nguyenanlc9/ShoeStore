@model ShoeStore.Models.DTO.Request.UserRegisterDTO
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-logo">
    <img src="~/images/logo.png" alt="ShoeStore Logo" />
</div>

<h4 class="text-center mb-4">Đăng ký tài khoản</h4>

@if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
{
    <div class="alert alert-danger">@ViewData["Message"]</div>
}

<form asp-action="Register" method="post" class="auth-form">
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
            </div>
            <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
        </div>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-phone"></i></span>
            </div>
            <input asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
        </div>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
            </div>
            <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
            </div>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-auth">Đăng ký</button>

    <div class="auth-links">
        <span>Đã có tài khoản?</span>
        <a asp-action="Login">Đăng nhập</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}