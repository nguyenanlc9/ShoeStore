@model ShoeStore.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditProfile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="PasswordHash" />
                <input type="hidden" asp-for="RoleID" />
                <input type="hidden" asp-for="Status" />
                <input type="hidden" asp-for="RegisterDate" />
                <input type="hidden" asp-for="LastLogin" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="control-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="control-label">Mật khẩu mới (để trống nếu không đổi)</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 