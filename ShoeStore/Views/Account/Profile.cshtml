@model ShoeStore.Models.User

<h2>Thông tin cá nhân</h2>
<div class="profile-info">
    <p><strong>Username:</strong> @Model.Username</p>
    <p><strong>Họ và tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.Phone</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Ngày đăng ký:</strong> @Model.RegisterDate.ToShortDateString()</p>
</div>
<a asp-action="EditProfile" class="btn btn-secondary">Chỉnh sửa thông tin</a>
<a asp-action="ChangePassword" class="btn btn-secondary">Đổi mật khẩu</a> 