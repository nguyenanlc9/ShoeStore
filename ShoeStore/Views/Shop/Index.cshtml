@model IEnumerable<ShoeStore.Models.Product>
@{
    ViewData["Title"] = "Shop Page";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Shop</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">
                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4">
                            <h2 class="text-black h5">Shop All</h2>
                        </div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuBrand" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @(ViewBag.SelectedBrand?.Name ?? "Thương hiệu")
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuBrand">
                                    <a class="dropdown-item @(ViewBag.SelectedBrandId == null ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId"
                                       asp-route-minPrice="@ViewBag.MinPrice"
                                       asp-route-maxPrice="@ViewBag.MaxPrice"
                                       asp-route-sort="@ViewBag.CurrentSort">
                                        Tất cả thương hiệu
                                    </a>
                                    @foreach (var brand in ViewBag.Brands)
                                    {
                                        <a class="dropdown-item @(ViewBag.SelectedBrandId == brand.BrandId ? "active" : "")"
                                           asp-controller="Shop" asp-action="Index"
                                           asp-route-brandId="@brand.BrandId"
                                           asp-route-categoryId="@ViewBag.SelectedCategoryId"
                                           asp-route-minPrice="@ViewBag.MinPrice"
                                           asp-route-maxPrice="@ViewBag.MaxPrice"
                                           asp-route-sort="@ViewBag.CurrentSort">
                                            @brand.Name <span class="text-muted">(@brand.ProductCount)</span>
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuSort" data-toggle="dropdown">
                                    @(ViewBag.SortLabel ?? "Sắp xếp")
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuSort">
                                    <a class="dropdown-item @(ViewBag.CurrentSort == null ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId">
                                        Mới nhất
                                    </a>
                                    <a class="dropdown-item @(ViewBag.CurrentSort == "name-asc" ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-sort="name-asc"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId">
                                        Tên, A đến Z
                                    </a>
                                    <a class="dropdown-item @(ViewBag.CurrentSort == "name-desc" ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-sort="name-desc"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId">
                                        Tên, Z đến A
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item @(ViewBag.CurrentSort == "price-asc" ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-sort="price-asc"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId">
                                        Giá, thấp đến cao
                                    </a>
                                    <a class="dropdown-item @(ViewBag.CurrentSort == "price-desc" ? "active" : "")"
                                       asp-controller="Shop" asp-action="Index"
                                       asp-route-sort="price-desc"
                                       asp-route-categoryId="@ViewBag.SelectedCategoryId">
                                        Giá, cao đến thấp
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-5">
                    @foreach (var product in Model)
                    {
                        <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                            <div class="block-4 text-center border">
                                <div class="block-4-image">
                                    @if (product.DiscountPrice > 0)
                                    {
                                        var discountPercent = Math.Round((product.DiscountPrice / product.Price) * 100);
                                        <div class="product-label sale">-@discountPercent%</div>
                                    }
                                    else if (product.UpdatedDate >= DateTime.Now.AddDays(-7))
                                    {
                                        <div class="product-label new">New</div>
                                    }

                                    <a href="@Url.Action("Detail", "Shop", new { id = product.ProductId })">
                                        <img src="@product.ImagePath" alt="@product.Name" class="img-fluid">
                                    </a>
                                </div>
                                <div class="block-4-text p-4">
                                    <h3><a href="@Url.Action("Detail", "Shop", new { id = product.ProductId })">@product.Name</a></h3>

                                    <!-- Wishlist Button -->
                                    <div class="wishlist-button mb-2">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            var isInWishlist = ViewBag.UserWishlist?.Contains(product.ProductId) ?? false;
                                            <button class="btn @(isInWishlist ? "btn-primary" : "btn-outline-primary") btn-sm toggle-wishlist"
                                                    data-product-id="@product.ProductId"
                                                    data-is-in-wishlist="@isInWishlist.ToString().ToLower()">
                                                <i class="@(isInWishlist ? "fas" : "far") fa-heart"></i>
                                                <span>@(isInWishlist ? "Remove from Wishlist" : "Add to Wishlist")</span>
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="Login"
                                               asp-route-returnUrl="@Context.Request.Path"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="far fa-heart"></i>
                                                <span>Login to Wishlist</span>
                                            </a>
                                        }
                                    </div>

                                    <!-- Price Display -->
                                    @if (product.DiscountPrice > 0)
                                    {
                                        <p class="mb-0">
                                            <span class="text-primary font-weight-bold">
                                                @String.Format("{0:N0}đ", product.Price - product.DiscountPrice)
                                            </span>
                                            <del class="text-muted">@String.Format("{0:N0}đ", product.Price)</del>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="text-primary font-weight-bold mb-0">
                                            @String.Format("{0:N0}đ", product.Price)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="row" data-aos="fade-up">
                    <div class="col-md-12 text-center">
                        <div class="site-block-27">
                            <ul>
                                @if (ViewBag.HasPreviousPage)
                                {
                                    <li>
                                        <a asp-controller="Shop" asp-action="Index"
                                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                                           asp-route-categoryId="@ViewBag.SelectedCategoryId"
                                           asp-route-brandId="@ViewBag.SelectedBrandId"
                                           asp-route-minPrice="@ViewBag.MinPrice"
                                           asp-route-maxPrice="@ViewBag.MaxPrice"
                                           asp-route-sort="@ViewBag.CurrentSort">&lt;</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="disabled"><span>&lt;</span></li>
                                }

                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                        @if (i == ViewBag.CurrentPage)
                                        {
                                            <span>@i</span>
                                        }
                                        else
                                        {
                                            <a asp-controller="Shop" asp-action="Index"
                                               asp-route-page="@i"
                                               asp-route-categoryId="@ViewBag.SelectedCategoryId"
                                               asp-route-brandId="@ViewBag.SelectedBrandId"
                                               asp-route-minPrice="@ViewBag.MinPrice"
                                               asp-route-maxPrice="@ViewBag.MaxPrice"
                                               asp-route-sort="@ViewBag.CurrentSort">@i</a>
                                        }
                                    </li>
                                }

                                @if (ViewBag.HasNextPage)
                                {
                                    <li>
                                        <a asp-controller="Shop" asp-action="Index"
                                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                                           asp-route-categoryId="@ViewBag.SelectedCategoryId"
                                           asp-route-brandId="@ViewBag.SelectedBrandId"
                                           asp-route-minPrice="@ViewBag.MinPrice"
                                           asp-route-maxPrice="@ViewBag.MaxPrice"
                                           asp-route-sort="@ViewBag.CurrentSort">&gt;</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="disabled"><span>&gt;</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <a asp-controller="Shop" asp-action="Index"
                               class="d-flex @(ViewBag.SelectedCategoryId == null ? "text-primary" : "")">
                                <span>All Categories</span>
                                <span class="text-black ml-auto">(@Model.Count())</span>
                            </a>
                        </li>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li class="mb-1">
                                <a asp-controller="Shop" asp-action="Index"
                                   asp-route-categoryId="@category.CategoryId"
                                   asp-route-brandId="@ViewBag.SelectedBrandId"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice"
                                   asp-route-sort="@ViewBag.CurrentSort"
                                   class="d-flex @(ViewBag.SelectedCategoryId == category.CategoryId ? "text-primary" : "")">
                                    <span>@category.Name</span>
                                    <span class="text-black ml-auto">(@category.ProductCount)</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Price Filter -->
                <div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Lọc theo giá</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <div class="mt-2">
                            <span class="price-display">
                                Giá: <span id="amount">0đ - 10.000.000đ</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <script>
        $(document).ready(function () {
            // Price Range Slider
            var initialMinPrice = @(ViewBag.MinPrice ?? 0);
            var initialMaxPrice = @(ViewBag.MaxPrice ?? 10000000);

            $("#slider-range").slider({
                range: true,
                min: 0,
                max: 10000000,
                step: 100000,
                values: [initialMinPrice, initialMaxPrice],
                slide: function (event, ui) {
                    $("#amount").text(formatPrice(ui.values[0]) + " - " + formatPrice(ui.values[1]));
                },
                stop: function (event, ui) {
                    filterProducts(ui.values[0], ui.values[1]);
                }
            });

            $("#amount").text(
                formatPrice(initialMinPrice) + " - " + formatPrice(initialMaxPrice)
            );

            function formatPrice(price) {
                return new Intl.NumberFormat('vi-VN', {
                    style: 'currency',
                    currency: 'VND'
                }).format(price);
            }

            function filterProducts(minPrice, maxPrice) {
                var url = new URL(window.location.href);
                var params = new URLSearchParams(url.search);
                params.set('minPrice', minPrice);
                params.set('maxPrice', maxPrice);

                if ('@ViewBag.SelectedCategoryId' !== '') {
                    params.set('categoryId', '@ViewBag.SelectedCategoryId');
                }
                if ('@ViewBag.CurrentSort' !== '') {
                    params.set('sort', '@ViewBag.CurrentSort');
                }

                window.location.href = '@Url.Action("Index", "Shop")' + '?' + params.toString();
            }

            // Wishlist Toggle
            $('.toggle-wishlist').click(function () {
                var button = $(this);
                var productId = button.data('product-id');
                var isInWishlist = button.data('is-in-wishlist');

                $.ajax({
                    url: '/Shop/ToggleWishlist',
                    type: 'POST',
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success) {
                            // Toggle button appearance
                            if (isInWishlist) {
                                button.removeClass('btn-primary').addClass('btn-outline-primary');
                                button.find('i').removeClass('fas').addClass('far');
                                button.find('span').text('Add to Wishlist');
                                button.data('is-in-wishlist', false);
                            } else {
                                button.removeClass('btn-outline-primary').addClass('btn-primary');
                                button.find('i').removeClass('far').addClass('fas');
                                button.find('span').text('Remove from Wishlist');
                                button.data('is-in-wishlist', true);
                            }
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred. Please try again.');
                    }
                });
            });
        });
    </script>
}