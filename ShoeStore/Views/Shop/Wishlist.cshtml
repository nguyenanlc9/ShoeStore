@model IEnumerable<ShoeStore.Models.Product>
@{
    ViewData["Title"] = "My Wishlist";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Wishlist</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="text-black h3 mb-3">My Wishlist</h2>
                @if (!Model.Any())
                {
                    <p>Your wishlist is empty.</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                <div class="block-4 text-center border">
                                    <div class="block-4-image">
                                        @if (product.DiscountPrice > 0)
                                        {
                                            var discountPercent = Math.Round((product.DiscountPrice / product.Price) * 100);
                                            <div class="product-label sale">-@discountPercent%</div>
                                        }
                                        else if (product.UpdatedDate >= DateTime.Now.AddDays(-7))
                                        {
                                            <div class="product-label new">New</div>
                                        }

                                        <a href="@Url.Action("Detail", "Shop", new { id = product.ProductId })">
                                            <img src="@product.ImagePath" alt="@product.Name" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="block-4-text p-4">
                                        <h3><a href="@Url.Action("Detail", "Shop", new { id = product.ProductId })">@product.Name</a></h3>
                                        <div class="mb-3">
                                            <button class="btn btn-primary btn-sm toggle-wishlist"
                                                    data-product-id="@product.ProductId"
                                                    data-is-in-wishlist="true">
                                                <i class="fas fa-heart"></i>
                                                <span>Remove from Wishlist</span>
                                            </button>
                                        </div>
                                        @if (product.DiscountPrice > 0)
                                        {
                                            <p class="mb-0">
                                                <span class="text-primary font-weight-bold">@String.Format("{0:N0}?", product.Price - product.DiscountPrice)</span>
                                                <del class="text-muted">@String.Format("{0:N0}?", product.Price)</del>
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="text-primary font-weight-bold mb-0">@String.Format("{0:N0}?", product.Price)</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.toggle-wishlist').click(function() {
                var button = $(this);
                var productId = button.data('product-id');

                $.ajax({
                    url: '/Shop/ToggleWishlist',
                    type: 'POST',
                    data: { productId: productId },
                    success: function(response) {
                        if (response.success) {
                            // Remove the product card from the wishlist page
                            button.closest('.col-sm-6').fadeOut(function() {
                                $(this).remove();
                                // Check if there are any products left
                                if ($('.col-sm-6').length === 0) {
                                    location.reload(); // Reload to show empty message
                                }
                            });
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred. Please try again.');
                    }
                });
            });
        });
    </script>
} 