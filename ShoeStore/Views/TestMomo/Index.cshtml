@{
    ViewData["Title"] = "Test Momo Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Test Thanh Toán Momo</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">Số tiền test: 10,000 VNĐ</p>
                    <form asp-action="CreateTestPayment" method="post">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                Thanh Toán Với Momo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 