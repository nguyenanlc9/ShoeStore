@{
    ViewData["Title"] = "Thanh Toán Thất Bại";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center">Thanh Toán Thất Bại</h3>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-times-circle text-danger" style="font-size: 48px;"></i>
                        <p class="mt-3">@ViewBag.Message</p>
                        <a asp-action="Index" class="btn btn-primary mt-3">Thử Lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 