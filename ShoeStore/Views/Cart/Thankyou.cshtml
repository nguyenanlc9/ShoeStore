@using Microsoft.EntityFrameworkCore
@using ShoeStore.Models.Enums
@model Order

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <span class="icon-check_circle display-3 text-success"></span>
                <h2 class="display-3 text-black">Cảm ơn bạn!</h2>
                <p class="lead mb-5">Đơn hàng của bạn đã được đặt thành công.</p>
                <p class="mb-3">Mã đơn hàng: <strong>@Model.OrderCode</strong></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Thông tin cơ bản và trạng thái -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5 class="mb-3">Thông tin đơn hàng</h5>
                                <p>Mã đơn hàng: <strong>@Model.OrderCode</strong></p>
                                <p>Ngày đặt: <strong>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</strong></p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3">Trạng thái đơn hàng</h5>
                                <p>
                                    Trạng thái đơn hàng: 
                                    <span class="badge @(Model.Status == OrderStatus.Completed ? "bg-success" : 
                                        Model.Status == OrderStatus.Processing ? "bg-info" : 
                                        Model.Status == OrderStatus.Pending ? "bg-warning" : "bg-danger")">
                                        @Model.Status.ToString()
                                    </span>
                                </p>
                                <p>
                                    Trạng thái thanh toán: 
                                    <span class="badge @(Model.PaymentStatus == PaymentStatus.Completed ? "bg-success" : "bg-warning")">
                                        @Model.PaymentStatus.ToString()
                                    </span>
                                </p>
                                <p>
                                    Phương thức thanh toán: 
                                    <span class="badge bg-info">@Model.PaymentMethod.ToString()</span>
                                </p>
                            </div>
                        </div>

                        <h5 class="card-title mb-4">Chi tiết đơn hàng</h5>

                        <!-- Chi tiết sản phẩm -->
                        <div class="table-responsive mb-4">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Size</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.Product.ImagePath" alt="@item.Product.Name" 
                                                        style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                                                    <span>@item.Product.Name</span>
                                                </div>
                                            </td>
                                            <td>@item.Size.SizeValue</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("N0") ₫</td>
                                            <td>@((item.Price * item.Quantity).ToString("N0")) ₫</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Tính toán giá -->
                        <div class="border-top pt-4">
                            <!-- Tạm tính -->
                            <div class="d-flex justify-content-between mb-3">
                                <span>Tạm tính:</span>
                                <span>@Model.OrderDetails.Sum(x => x.Price * x.Quantity).ToString("N0") ₫</span>
                            </div>

                            <!-- Giảm giá thành viên (nếu có) -->
                            @{
                                var user = await Context.RequestServices.GetService<ApplicationDbContext>()
                                    .Users.Include(u => u.MemberRank)
                                    .FirstOrDefaultAsync(u => u.UserID == Model.UserId);
                                
                                if (user?.MemberRank != null)
                                {
                                    var memberDiscount = Model.OrderDetails.Sum(x => x.Price * x.Quantity) * (user.MemberRank.DiscountPercent / 100m);
                                    <div class="d-flex justify-content-between mb-3 text-success">
                                        <span>Giảm giá thành viên (@user.MemberRank.RankName - @user.MemberRank.DiscountPercent%):</span>
                                        <span>-@memberDiscount.ToString("N0") ₫</span>
                                    </div>
                                }
                            }

                            <!-- Giảm giá từ mã (nếu có) -->
                            @if (!string.IsNullOrEmpty(Model.OrderCoupon))
                            {
                                var coupon = await Context.RequestServices.GetService<ApplicationDbContext>()
                                    .Coupons.FirstOrDefaultAsync(c => c.CouponId == Model.CouponId);
                                
                                if (coupon != null)
                                {
                                    var couponDiscount = Model.OrderDetails.Sum(x => x.Price * x.Quantity) * (coupon.DiscountPercentage / 100m);
                                    <div class="d-flex justify-content-between mb-3 text-success">
                                        <span>Giảm giá từ mã (@Model.OrderCoupon - @coupon.DiscountPercentage%):</span>
                                        <span>-@couponDiscount.ToString("N0") ₫</span>
                                    </div>
                                }
                            }

                            <!-- Tổng tiền -->
                            <div class="d-flex justify-content-between mt-3">
                                <strong>Tổng tiền:</strong>
                                <strong class="text-primary h4">@Model.TotalAmount.ToString("N0") ₫</strong>
                            </div>
                        </div>

                        <!-- Thông tin giao hàng -->
                        <div class="mt-4">
                            <h5 class="mb-3">Thông tin giao hàng</h5>
                            <p><strong>Người nhận:</strong> @Model.OrderUsName</p>
                            <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                            <p><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <p><strong>Ghi chú:</strong> @Model.Notes</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua sắm</a>
                    <a href="@Url.Action("Orders", "Account")" class="btn btn-outline-primary">Xem đơn hàng của tôi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 90%;
        padding: 0.5em 1em;
    }
    .table img {
        border-radius: 4px;
    }
</style>

