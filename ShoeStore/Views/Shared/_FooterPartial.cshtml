<footer class="site-footer border-top">
    <div class="container">
        <div class="row">
            <!-- Cột Thông tin liên hệ -->
            <div class="col-md-4 col-12 mb-4">
                <h3 class="footer-heading">Thông tin liên hệ</h3>
                <ul class="list-unstyled footer-info">
                    @if (ViewData["FooterInfo"] is ShoeStore.Models.Footer footerInfo)
                    {
                        @if (!string.IsNullOrEmpty(footerInfo.FooterAddress))
                        {
                            <li><i class="fas fa-map-marker-alt"></i> @footerInfo.FooterAddress</li>
                        }
                        @if (!string.IsNullOrEmpty(footerInfo.FooterPhone))
                        {
                            <li><i class="fas fa-phone"></i> @footerInfo.FooterPhone</li>
                        }
                        @if (!string.IsNullOrEmpty(footerInfo.FooterEmail))
                        {
                            <li><i class="fas fa-envelope"></i> @footerInfo.FooterEmail</li>
                        }
                    }
                </ul>
            </div>

            <!-- Cột Liên kết nhanh -->
            <div class="col-md-4 col-12 mb-4">
                <h3 class="footer-heading">Liên kết nhanh</h3>
                <ul class="list-unstyled quick-links">
                    <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Trang chủ</a></li>
                    <li><a asp-controller="Shop" asp-action="Index"><i class="fas fa-shopping-bag"></i> Sản phẩm</a></li>
                    <li><a asp-controller="Home" asp-action="About"><i class="fas fa-info-circle"></i> Về chúng tôi</a></li>
                    <li><a asp-controller="Home" asp-action="Contact"><i class="fas fa-envelope"></i> Liên hệ</a></li>
                </ul>
            </div>

            <!-- Cột Theo dõi chúng tôi -->
            <div class="col-md-4 col-12 mb-4">
                <h3 class="footer-heading">Theo dõi chúng tôi</h3>
                <div class="social-links">
                    <a href="#" class="social-icon facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon youtube"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>

        <!-- Phần Bản quyền -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <p class="copyright">
                    &copy; @DateTime.Now.Year ShoeStore | Made with <i class="fas fa-heart text-danger"></i>
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: #222;
        color: #bbb;
        padding: 40px 0;
        font-size: 16px;
    }

    .footer-heading {
        color: #fff;
        margin-bottom: 20px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .footer-info li {
        margin-bottom: 10px;
        font-size: 14px;
    }

    .footer-info i {
        margin-right: 10px;
        color: #f8b400;
    }

    .quick-links li {
        margin-bottom: 10px;
    }

    .quick-links a {
        color: #bbb;
        transition: 0.3s;
        display: flex;
        align-items: center;
    }

        .quick-links a i {
            margin-right: 8px;
            color: #f8b400;
        }

        .quick-links a:hover {
            color: #f8b400;
        }

    .social-links {
        display: flex;
        gap: 10px;
    }

    .social-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 18px;
        background: #333;
        color: #fff;
        transition: 0.3s;
    }

        .social-icon:hover {
            background: #f8b400;
            color: #222;
        }

    .copyright {
        font-size: 14px;
        color: #bbb;
    }
</style>
