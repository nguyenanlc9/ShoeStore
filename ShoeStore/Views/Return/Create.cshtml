@model Order
@{
    ViewData["Title"] = "Yêu cầu đổi trả";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yêu cầu đổi trả đơn hàng #@Model.OrderCode</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="orderId" value="@Model.OrderId" />
                        
                        <div class="mb-4">
                            <h5>Thông tin đơn hàng</h5>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderDetails)
                                        {
                                            <tr>
                                                <td>@item.Product.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Price.ToString("N0")đ</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Lý do đổi trả <span class="text-danger">*</span></label>
                            <textarea name="reason" class="form-control" rows="4" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hình ảnh sản phẩm</label>
                            <input type="file" name="images" class="form-control" multiple accept="image/*" />
                            <small class="text-muted">Có thể chọn nhiều ảnh (nếu có)</small>
                        </div>

                        <div class="alert alert-info">
                            <h6>Lưu ý:</h6>
                            <ul class="mb-0">
                                <li>Chỉ chấp nhận đổi trả trong vòng 7 ngày kể từ ngày nhận hàng</li>
                                <li>Sản phẩm phải còn nguyên tem, nhãn và chưa qua sử dụng</li>
                                <li>Vui lòng chụp ảnh rõ ràng các lỗi của sản phẩm (nếu có)</li>
                            </ul>
                        </div>

                        <div class="text-end">
                            <a asp-controller="Auth" asp-action="Orders" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 